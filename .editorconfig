# http://editorconfig.org
root = true

[*]
charset                  = utf-8
indent_style             = space
indent_size              = 2
end_of_line              = crlf
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{cs,vb}]
indent_style = tab
tab_width    = 4
indent_size  = 4

[*.xml]
indent_style = space
indent_size  = 4

[*.json]
indent_style = space
indent_size  = 4